.top100content {
  width: 100%;
  height: 470rpx;
  display: flex;
  white-space: nowrap;
  background-color: aquamarine;
}


.top100item {
  width: 300rpx;
  height: 470rpx;
  box-sizing: border-box;
  margin: 0 20rpx;
  display: inline-block;
  background-color: bisque;
}

.scroll-box {
  width: 100%;
  height: 300rpx;
  display: flex;
  white-space: nowrap;
  background-color: rgb(240, 240, 240);
}

.scroll-item {
  width: 250rpx;
  height: 250rpx;
  display: inline-block;
  background-color: white;
  margin: 25rpx 0 25rpx 25rpx;
  border-radius: 10rpx;
  position: relative;
}

.bg {
  width: 100%;
  height: 250rpx;
  background-image: url(https://cn.bing.com/th?id=OIP.cxQemnU09Ua7BLEJfhn9VgHaEe&w=200&h=120&rs=1&qlt=80&o=6&dpr=1.25&pid=3.1);
  background-repeat: no-repeat;
  background-size: 1000rpx 1000rpx;
  background-position: center;
  filter: blur(20rpx) contrast(80%) opacity(80%) opacity(80%);
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  z-index: -1;
  vertical-align: middle;
}