    <wux-cell title="开启免打扰" is-link extra="{{ displayValue1 }}"></wux-cell>
  </wux-picker> -->
  <!-- <wux-cell title="分享小队" is-link url="../share/share"></wux-cell> -->
  <wux-cell wx:if="{{!admin}}" title="退出圈子" is-link bindtap="quitFlock"></wux-cell>
  <wux-cell wx:if="{{admin}}" title="注销圈子" is-link bindtap="logoutFlock"></wux-cell>
</wux-cell-group>