<wux-toast id='wux-toast'></wux-toast>
<wux-cell-group title="选项">
  <wux-cell wx:if="{{admin}}" title="基本信息" is-link bindtap="adjust"></wux-cell>
  <block wx:if="{{adjust}}">
    <wux-cell hover-class="none">
      <wux-input bind:change="onChangeOfNameInput" label="名称" value="{{valueOfName}}" controlled="true"></wux-input>
    </wux-cell>
    <wux-cell hover-class="none">
      <wux-input bind:change="onChangeOfStateInput" label="描述" value="{{valueOfState}}" controlled="true"></wux-input>
    </wux-cell>

    <button bindtap="submit" disabled="{{flag}}" class="button white">修改</button>

  </block>
  <wux-cell title="成员列表" is-link url="../members/members?flock_id={{info.id}}&task_id="></wux-cell>
