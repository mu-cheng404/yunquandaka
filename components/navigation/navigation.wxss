.custom_nav {
    width: 100%;
    background: #fff;
}

.custom_nav_box {
    position: fixed;
    width: 100%;
}

.custom_nav_bar {
    position: relative;
}

.custom_nav_box .nav_title {
    font-size: 34rpx;
    color: #000;
    text-align: center;
    position: absolute;
    max-width: 360rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    font-weight: 600;
}

.custom_nav_box .custom_nav_icon {
    position: absolute;
    background-color:rgba(255, 255, 255, 0.5);
    border: .5rpx solid rgba(0, 0, 0, .1);
    border-radius: 50%;
    display: flex;
    padding: 0 10rpx
}

.custom_nav_icon .goback {
    background: url('http://ccreblog.cn/wp-content/uploads/2022/05/返回.png') no-repeat center center;
    background-size: 60%;
    padding: 0 5px;
    margin: 4px 0;
}

.custom_nav_icon .home {
    background: url('http://ccreblog.cn/wp-content/uploads/2022/05/主页.png') no-repeat center center;
    background-size: 60%;
    padding: 0 5px;
    margin: 4px 0;
    border-left: 1px solid rgba(0, 0, 0, .1)
}
.custom_nav_icon .message {
  background: url('http://ccreblog.cn/wp-content/uploads/2022/05/消息.png') no-repeat center center;
  background-size: 60%;
  padding: 0 5px;
  margin: 4px 0;
  border-left: 1px solid rgba(0, 0, 0, .1)
}